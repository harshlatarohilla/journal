<%- include("partials/header") %>

    <h1 class="heading">Compose</h1>

    <form class="container" action="/compose" method="post">
        <div class="form-group">
            <label for="newTitle">Title</label>
            <input class="form-control" type="text" name="title" id="newTitle" placeholder="How you feeling today? ">
        </div>
        <div class="form-group">
            <label for="newPost">Post</label>
            <textarea class="form-control" name="content" id="newPost" cols="0" rows="7"
                placeholder="Let's talk about it..."></textarea>
        </div>
        <button class="btn btn-primary" type="submit" id="submit" name="submit">Publish</button>
    </form>

    <%- include("partials/footer") %>